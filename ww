unit Unit1;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TForm1 = class(TForm)
    Edit1: TEdit;
    Edit2: TEdit;
    Edit3: TEdit;
    ButtonPlus: TButton;
    ButtonMinus: TButton;
    ButtonMul: TButton;
    ButtonDiv: TButton;
    procedure ButtonPlusClick(Sender: TObject);
    procedure ButtonMinusClick(Sender: TObject);
    procedure ButtonMulClick(Sender: TObject);
    procedure ButtonDivClick(Sender: TObject);
  private
    function GetNumbers(out A, B: Double): Boolean;
  public
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

function TForm1.GetNumbers(out A, B: Double): Boolean;
begin
  Result := TryStrToFloat(Edit1.Text, A) and TryStrToFloat(Edit2.Text, B);
  if not Result then
    ShowMessage('Введите корректные числа');
end;

procedure TForm1.ButtonPlusClick(Sender: TObject);
var
  A, B: Double;
begin
  if GetNumbers(A, B) then
    Edit3.Text := FloatToStr(A + B);
end;

procedure TForm1.ButtonMinusClick(Sender: TObject);
var
  A, B: Double;
begin
  if GetNumbers(A, B) then
    Edit3.Text := FloatToStr(A - B);
end;

procedure TForm1.ButtonMulClick(Sender: TObject);
var
  A, B: Double;
begin
  if GetNumbers(A, B) then
    Edit3.Text := FloatToStr(A * B);
end;

procedure TForm1.ButtonDivClick(Sender: TObject);
var
  A, B: Double;
begin
  if GetNumbers(A, B) then
  begin
    if B = 0 then
      ShowMessage('Деление на ноль невозможно')
    else
      Edit3.Text := FloatToStr(A / B);
  end;
end;

end.
